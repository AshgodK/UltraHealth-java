<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox id="postView" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.EditQuestionController">
     <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label style="-fx-font-size: 16pt;" text="Edit post" />
    
     <TextField fx:id="themeField" promptText="Title" />
     <TextField fx:id="categoriField" promptText="Categorie" />

    <TextArea fx:id="contentArea" promptText="Content" />
  
     

   
     <HBox prefHeight="0.0" prefWidth="567.0" spacing="10.0">
                 <Button fx:id="saveButton" onAction="#updateQuestion" text="Update" />
                 <Button fx:id="backButton" onAction="#back" text="Back" />
            </HBox>
</VBox>
