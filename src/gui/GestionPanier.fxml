<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="panetetbadel" prefHeight="624.8" prefWidth="972.0" style="-fx-background-color: #000000; -fx-border-color: #be894a; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GestionPanier">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="620.0" prefWidth="970.0">
         <children>
            <TableView fx:id="reservationsTable" prefHeight="300.0" prefWidth="50.0">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="102.0" text="Search By" textFill="#be894a">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <ChoiceBox fx:id="searchcategory" prefWidth="150.0">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </ChoiceBox>
                  <TextField fx:id="searchby" onKeyTyped="#searchkeypressed" prefWidth="200.0" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#AddReservation" prefHeight="35.0" prefWidth="190.0" style="-fx-background-color: #BE894A;" styleClass="hoverClass" text="Add Reservation" textFill="WHITE">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#UpdateReservation" prefHeight="35.0" prefWidth="190.0" style="-fx-background-color: #BE894A;" styleClass="hoverClass" text="Update Selected Reservation" textFill="WHITE">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#DeleteReservation" prefHeight="35.0" prefWidth="190.0" style="-fx-background-color: #BE894A;" styleClass="hoverClass" text="Delete Selected Reservation" textFill="WHITE">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</Pane>
