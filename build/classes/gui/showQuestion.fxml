<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="449.0" prefWidth="658.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.ShowQuestionController">
   <children>
      <ImageView fitHeight="503.0" fitWidth="728.0" layoutX="-20.0" layoutY="-21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/IconePI/background.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="tvQuestion" layoutX="44.0" layoutY="75.0" onSort="#showQuestion" prefHeight="324.0" prefWidth="570.0" style="-fx-background-color: transparent;">
        <columns>
          <TableColumn fx:id="colTitle" text="Titre" />
          <TableColumn fx:id="colCategorie" prefWidth="105.0" text="Categorie" />
            <TableColumn fx:id="colDate" prefWidth="97.0" text="Date" />
            <TableColumn fx:id="colContent" prefWidth="287.0" text="Content" />
        </columns>
      </TableView>
      <Label layoutX="189.0" layoutY="31.0" text="Search" />
      <TextField fx:id="searchField" layoutX="255.0" layoutY="28.0" />
      <Button fx:id="details" layoutX="69.0" layoutY="403.0" mnemonicParsing="false" onAction="#redirectSingle" style="-fx-background-color: transparent; -fx-border-color: #4A85ED;" text="Details" />
      <Button fx:id="edit" layoutX="168.0" layoutY="403.0" mnemonicParsing="false" onAction="#redirectUpdate" style="-fx-background-color: transparent; -fx-border-color: #4A85ED;" text="Edit" />
