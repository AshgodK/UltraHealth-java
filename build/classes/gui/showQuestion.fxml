      <Button fx:id="btnstats" layoutX="434.0" layoutY="403.0" mnemonicParsing="false" onAction="#displayStats" style="-fx-background-color: transparent; -fx-border-color: #4A85ED;" text="Stats" />
      <ImageView fx:id="home" fitHeight="67.0" fitWidth="62.0" layoutX="646.0" layoutY="8.0" onMouseClicked="#goHome" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/IconePI/home.png" />
         </image>
      </ImageView>

   </children>
</AnchorPane>
